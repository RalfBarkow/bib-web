{
  "name": "zotero-bib-web",
  "license": "AGPL-3.0",
  "version": "0.0.1",
  "private": true,
  "description": "",
  "repository": "",
  "main": "",
  "config": {
    "port": "8001",
    "translation_server": "http://localhost:1969"
  },
  "scripts": {
    "serve": "node scripts/server.js -p $npm_package_config_port -t $npm_package_config_translation_server",
    "prebuild": "npm run clean -s && mkdir -p build/static/icons",
    "clean": "rimraf build",
    "build": "run-p 'build:js -s' 'build:scss -s' 'build:html -s' 'build:icons -s'",
    "browserify": "NODE_ENV=browser browserify -s ZoteroBibComponent --extension=.jsx src/js/main.js -t [babelify] -o build/static/bib-component.js",
    "minify": "minify build/static/bib-component.js --mangle --simplify --builtIns --mergeVars --removeConsole --removeDebugger -o build/static/bib-component.js",
    "build:js": "run-s browserify minify",
    "build:scss": "node-sass src/scss/bib.scss --output-style compressed --output build/static/",
    "build:html": "cp src/html/index.html build/",
    "build:icons": "mkdir -p build/static/icons && rsync -vaz src/icons/ build/static/icons",
    "devel": "run-p 'devel:js -s' 'devel:scss -s' 'devel:html -s' 'devel:icons -s'",
    "devel:js": "watchify -s ZoteroBibComponent --extension=.jsx src/js/main.js -d -v -t [babelify] -o build/static/bib-component.js",
    "devel:scss": "node-sass src/scss/bib.scss --recursive --source-map true --output build/static && node-sass src/scss/bib.scss --watch --recursive --source-map true --output build/static",
    "devel:html": "nodemon -q -w src/html --ext '.' --exec 'npm run build:html'",
    "devel:icons": "nodemon -q -w src/icons --ext '.' --exec 'npm run build:icons'",
    "start": "mkdir -p build/static && run-p \"build:html\" \"build:icons\" \"serve -s {@}\" \"devel -s {@}\""
  },
  "dependencies": {
    "babel-regenerator-runtime": "^6.5.0",
    "citeproc-js": "github:tnajdek/citeproc-js",
    "classnames": "^2.2.5",
    "es6-promise": "^4.0.5",
    "isomorphic-fetch": "^2.2.1",
    "prop-types": "^15.5.10",
    "react": "^15.4.2",
    "react-clipboard.js": "^1.1.1",
    "react-dom": "^15.4.2",
    "react-router-dom": "^4.1.2",
    "react-select": "^1.0.0-rc.3",
    "react-transition-group": "^1.2.0",
    "zotero-api-client": "^0.9.1",
    "zotero-api-client-cache": "^0.1.1",
    "zotero-bib": "github:zotero/bib#v0.1.10-release",
    "zotero-web-library": "^0.9.15-alpha"
  },
  "devDependencies": {
    "babel-minify": "^0.2.0",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-plugin-transform-async-to-generator": "^6.24.1",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-plugin-transform-regenerator": "^6.26.0",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-minify": "^0.2.0",
    "babel-preset-react": "^6.22.0",
    "babel-preset-stage-2": "^6.24.1",
    "babelify": "^7.3.0",
    "browserify": "^14.0.0",
    "http-proxy": "^1.16.2",
    "http-server": "^0.9.0",
    "minimist": "^1.2.0",
    "node-sass": "^4.5.0",
    "nodemon": "^1.11.0",
    "npm-run-all": "^4.0.1",
    "rimraf": "^2.5.4",
    "serve-static": "^1.12.3",
    "uglifyify": "^3.0.4",
    "watchify": "^3.9.0"
  }
}
