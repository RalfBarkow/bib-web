{
  "name": "zotero-bib-web",
  "license": "AGPL-3.0",
  "version": "0.0.1",
  "private": true,
  "description": "",
  "repository": "",
  "main": "",
  "config": {
    "port": "8001",
    "translation_server": "http://localhost:1969"
  },
  "scripts": {
    "serve": "node scripts/server.js -p $npm_package_config_port -t $npm_package_config_translation_server",
    "prebuild": "npm run clean -s && mkdir -p build/static/",
    "clean": "rimraf build",
    "build": "run-p 'build:js -s' 'build:scss -s' 'build:html -s' 'build:static -s'",
    "browserify": "NODE_ENV=browser browserify -s ZoteroBibComponent --extension=.jsx src/js/main.js -t [babelify] -o build/static/bib-component.js",
    "minify": "minify build/static/bib-component.js --mangle --simplify --builtIns --mergeVars --removeConsole --removeDebugger -o build/static/bib-component.js",
    "build:js": "run-s browserify minify",
    "build:scss": "node-sass src/scss/bib.scss --output-style compressed --output build/static/",
    "build:html": "cp src/html/index.html build/",
    "build:static": "mkdir -p build/static && rsync -vazL src/static/* build/static/",
    "devel": "run-p 'devel:js -s' 'devel:scss -s' 'devel:html -s' 'devel:static -s'",
    "devel:js": "watchify -s ZoteroBibComponent --extension=.jsx src/js/main.js -d -v -t [babelify] -p mapstraction -o build/static/bib-component.js",
    "devel:scss": "node-sass src/scss/bib.scss --recursive --source-map true --output build/static && node-sass src/scss/bib.scss --watch --recursive --source-map true --output build/static",
    "devel:html": "nodemon -q -w src/html --ext '.' --exec 'npm run build:html'",
    "devel:static": "nodemon -q -w src/static --ext '.' --exec 'npm run build:static'",
    "start": "mkdir -p build/static && run-p \"build:html\" \"build:static\" \"serve -s {@}\" \"devel -s {@}\""
  },
  "dependencies": {
    "babel-regenerator-runtime": "^6.5.0",
    "classnames": "^2.2.5",
    "es6-promise": "^4.1.1",
    "file-saver": "^1.3.3",
    "isomorphic-fetch": "^2.2.1",
    "load-script": "^1.0.0",
    "prop-types": "^15.6.0",
    "react": "^16.1.1",
    "react-clipboard.js": "^1.1.3",
    "react-dom": "^16.1.1",
    "react-key-handler": "^1.0.1",
    "react-modal": "^3.1.5",
    "react-popover": "^0.5.4",
    "react-router-dom": "^4.2.2",
    "react-select": "^1.1.0",
    "react-transition-group": "<2.0.0",
    "zotero-api-client": "^0.9.4",
    "zotero-api-client-cache": "^0.2.0",
    "zotero-bib": "github:zotero/bib#v0.4.1-release",
    "zotero-web-library": "^0.9.24-alpha"
  },
  "devDependencies": {
    "babel-minify": "^0.2.0",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-plugin-transform-async-to-generator": "^6.24.1",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-plugin-transform-regenerator": "^6.26.0",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-2": "^6.24.1",
    "babelify": "^8.0.0",
    "browserify": "^14.5.0",
    "http-proxy": "^1.16.2",
    "http-server": "^0.10.0",
    "mapstraction": "^1.0.1",
    "minimist": "^1.2.0",
    "node-sass": "^4.7.2",
    "nodemon": "^1.12.1",
    "npm-run-all": "^4.1.2",
    "rimraf": "^2.6.2",
    "serve-static": "^1.13.1",
    "uglifyify": "^4.0.5",
    "watchify": "^3.9.0"
  }
}
