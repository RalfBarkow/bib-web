<!doctype html>
<html lang="en">
<head>
	<meta http-equiv="content-type" content="text/html; charset=utf-8">
	<title>ZBib</title>
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<link rel="stylesheet" type="text/css" href="/static/bib.css">
	<link rel="shortcut icon" href="/static/favicon.ico" type="image/x-icon">
</head>
<body>
	<main data-widget="zotero-bib"></main>
	<script src="/static/bib-component.js"></script>
	<script>
		ZoteroBibComponent.init(
			document.querySelector('[data-widget=zotero-bib]'),
			{
				{{#each indexConfig}}
					{{#if this}}
						{{@key}}: '{{this}}',
					{{/if}}
				{{/each}}
			}
		);
	</script>
		<script
			src="http://code.jquery.com/jquery-3.3.1.js"
			integrity="sha256-2Kok7MbOyxpgUVvAk/HJ2jigOSYS2auK4Pfzbm7uH60="
			crossorigin="anonymous"></script>
	<script>
		function ui () {
			var timer;

			$('.dots').mouseenter(function(){
				var that = this;

				timer = setTimeout(function(){
        	$('#thumbs div').removeClass('hovered');
					$(that).closest('.citation').addClass('options');
    		}, 150);
			}).mouseleave(function() {
				clearTimeout(timer);
			});

			$('.citation').mouseleave(function() {
				$(this).removeClass('options');
			});
		}

		setTimeout(ui, 1000);

	</script>
</body>
</html>
